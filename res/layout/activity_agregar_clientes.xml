<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgregarClientesActivity" >

    <TextView
        android:id="@+id/lblAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lblAgregarCliente" />

    <TextView
        android:id="@+id/lblNombCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAgregarCliente"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/lblAgregarCliente"
        android:text="@string/lblNombCliente" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblNombCliente"
        android:layout_alignBottom="@+id/lblNombCliente"
        android:layout_alignLeft="@+id/lblAgregarCliente"
        android:ems="10" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNombCliente"
        android:layout_below="@+id/txtNombre"
        android:layout_marginTop="36dp"
        android:text="@string/lblTel" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblTelefono"
        android:layout_alignBottom="@+id/lblTelefono"
        android:layout_alignLeft="@+id/txtNombre"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblTelefono"
        android:layout_below="@+id/txtTelefono"
        android:layout_marginTop="38dp"
        android:text="@string/lblProductos" />

    <Spinner
        android:id="@+id/spnProductos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblProductos"
        android:layout_below="@+id/lblProductos"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnProductos"
        android:layout_below="@+id/spnProductos"
        android:layout_marginTop="19dp"
        android:text="@string/lblDireccion" />

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:src="@drawable/save24px" />

</RelativeLayout>
