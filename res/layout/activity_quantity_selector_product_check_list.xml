<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <NumberPicker
        android:id="@+id/nmbpQuantityQuantitySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <Button
             android:id="@+id/btnOkButtonQuantitySelector"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:background="#FFFFFF"
             android:drawableLeft="@drawable/okbuttom"
             android:fontFamily="roboto-light"
             android:paddingLeft="10dp"
             android:text="@string/btnAccept"
             android:textColor="#91A5AE"
             android:textSize="18sp" />
        
    </RelativeLayout>

   

</TableLayout>