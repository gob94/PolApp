<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PerfilCliente" >

    <ScrollView
        android:id="@+id/scrollViewClientProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layoutProfileClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="True"
                android:onClick="onClick" >

                <TextView
                    android:id="@+id/lblClientTitleProfile"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="86dp"
                    android:gravity="center_horizontal"
                    android:text="Clientes"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#045FB4" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutProfileClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="True" >

                <TextView
                    android:id="@+id/lblClientNameProfile"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lblName" />

                <TextView
                    android:id="@+id/lblClientNameProfileEditabled"
                    style="@style/TextoMenuTurquoise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblClientNameProfile"
                    android:text=""
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutProfileClientLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="True" >

                <TextView
                    android:id="@+id/lblClientLastNameProfile"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lblFirstLastName" />

                <TextView
                    android:id="@+id/lblClientLastNameProfileEditabled"
                    style="@style/TextoMenuTurquoise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblClientLastNameProfile"
                    android:text=""
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutProfileClientPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="True" >

                <TextView
                    android:id="@+id/lblClientPhoneProfile"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lblPhone" />

                <TextView
                    android:id="@+id/lblClientPhoneProfileEditabled"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblProductPriceProfile"
                    android:text=""
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutProfileClientDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="True" >

                <TextView
                    android:id="@+id/lblClientDirectionProfile"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lblAddress" />

                <TextView
                    android:id="@+id/lblClientDirectionProfileEditabled"
                    style="@style/TextoMenuBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblClientDirectionProfile"
                    android:text=""
                    android:textColor="#000000" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layoutProfileClientMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="True" >

                
            </RelativeLayout>
            
            

            <RelativeLayout
                android:id="@+id/layoutProfileProductButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="True" >

                <Button
                    android:id="@+id/btnAcceptClientProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
					android:drawableLeft="@drawable/okbuttom"
                    android:fontFamily="roboto-light"
                    android:paddingLeft="10dp"
                    android:text="@string/btnAccept"
                    android:textColor="#91A5AE"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnDeleteClientProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#FFFFFF"
                    android:fontFamily="roboto-light"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/deletebuttom"
                    android:text="@string/lblDeleteProductPopUp"
                    android:textColor="#91A5AE"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnEditClientProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#FFFFFF"
                    android:fontFamily="roboto-light"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/editbuttom"
                    android:text="@string/lblEditProductPopUp"
                    android:textColor="#91A5AE"
                    android:textSize="16sp" />
                
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
