<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/OrderProductListHeader"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#B40431"
        android:gravity="center"
        android:text="@string/lblOrderId"
        android:textColor="#FFFFFF">
    </TextView>

    <TextView
        android:id="@+id/ClientNameProductListHeader"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#B40431"
        android:gravity="center"
        android:text="@string/lblClientName"
        android:textColor="#FFFFFF" >
    </TextView>

    <TextView
        android:id="@+id/ActualBalanceProductListHeader"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#B40431"
        android:gravity="center"
        android:text="@string/lblActualBalance"
        android:textColor="#FFFFFF" >
    </TextView>

    <TextView
        android:id="@+id/NextPaymentDateProductListHeader"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#B40431"
        android:gravity="center"
        android:text="@string/lblNextPaymentDate"
        android:textColor="#FFFFFF" >
    </TextView>

</LinearLayout>