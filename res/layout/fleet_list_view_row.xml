<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/LicenceFleetListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:text="@string/lblPlate" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

    <TextView
        android:id="@+id/BrandFleetListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:text="@string/lblBrand" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

    
    <TextView
        android:id="@+id/ModelFleetListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:text="@string/lblModel" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>
    
    <TextView
        android:id="@+id/RtvFleetListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape_green"
        android:gravity="center"
        android:text="@string/lblRTV" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

