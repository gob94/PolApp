<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".AgregarClienteActivity" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblNombCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="@string/lblNombCliente"
                android:textColor="#045FB4" />

            <EditText
                android:id="@+id/txtNombreClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@+id/lblNombCliente"
                android:layout_weight="0"
                android:ems="10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblApellidoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@+id/txtApellidoCliente"
                android:text="@string/lblApellido1"
                android:textColor="#045FB4" />

            <EditText
                android:id="@+id/txtApellidoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@+id/lblApellidoCliente"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:drawableRight="@+id/txtTelefonoCliente"
                android:text="@string/lblTel"
                android:textColor="#045FB4" />

            <EditText
                android:id="@+id/txtTelefonoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@+id/lblTelefono"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblDireccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:clickable="true"
                android:layout_gravity="right"
                android:text="Agregar Direccion del cliente"
                android:textColor="#013ADF"
                android:textColorLink="#013ADF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="1dip" >

            <Button
                android:id="@+id/btnAgregarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/btnAccept"
                android:drawableLeft="@drawable/check32px"
                android:src="@drawable/save24px"
                android:text="@string/btnAccept" />

            <Button
                android:id="@+id/btnCancelarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#FFFFFF"
                android:contentDescription="@string/btnCancel"
                android:drawableLeft="@drawable/cancel32px"
                android:src="@drawable/cancel32px"
                android:text="@string/btnCancel" />
        </TableRow>
    </TableLayout>

</ScrollView>