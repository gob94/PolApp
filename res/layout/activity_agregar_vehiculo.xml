<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AgregarVehiculo" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" 
        android:layout_marginLeft="10dp">

        <Space android:layout_height="15dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblPlateAddVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblPlate"
                android:textColor="#088A4B"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtPlateAddVehicle"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:textSize="16sp" />
        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblBrandAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblBrand"
                android:textColor="#088A4B"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtBrandAddVehicle"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:inputType="textPersonName"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblCostPerKmAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblCostPerKm"
                android:textColor="#088A4B"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtCostPerKmAddVehicle"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:inputType="number"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblModelAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblModel"
                android:textColor="#088A4B"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtModelAddVehicle"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblRTVAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblRTV"
                android:textColor="#088A4B"
                android:textSize="16sp" 
                android:onClick="onClick"
				android:clickable="true"/>

        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblAvailable"
                android:textColor="#088A4B"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rgAvailableAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbYesAddVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/lblYes" />

                <RadioButton
                    android:id="@+id/rbNoAddVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNo" />
            </RadioGroup>
        </TableRow>

        <Space android:layout_height="10dp" />

        <TableRow
            android:id="@+id/tblRButtonPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnSaveCarAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/okbuttom"
                android:fontFamily="roboto-light"
                android:paddingLeft="10dp"
                android:text="@string/btnAccept"
                android:textColor="#91A5AE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCancelCarAddVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/cancelbuttom"
                android:fontFamily="roboto-light"
                android:paddingRight="10dp"
                android:text="@string/btnCancel"
                android:textColor="#91A5AE"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

</ScrollView>