<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/NameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#045FB4"
        android:gravity="center"
        android:text="@string/lblName" 
        android:textColor="#FFFFFF">
    </TextView>

    <TextView
        android:id="@+id/FirstLastNameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#045FB4"
        android:gravity="center"
        android:text="@string/lblFirstLastName" 
        android:textColor="#FFFFFF">
    </TextView>

    <TextView
        android:id="@+id/SecondLastNameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#045FB4"
        android:gravity="center"
        android:text="@string/lblSecondLastName"
        android:textColor="#FFFFFF"
        android:textSize="9sp" >

    </TextView>

    <TextView
        android:id="@+id/AccountStateClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="#045FB4"
        android:gravity="center"
        android:text="@string/lblState" 
        android:textColor="#FFFFFF">
    </TextView>

</LinearLayout>