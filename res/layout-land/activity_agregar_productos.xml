<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ProductosActivity" >

        <Space android:layout_height="25dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dip" >

            <TextView
                android:id="@+id/lblCodeAddProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblCode"
                android:textColor="#FF01A7EB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtCodeAddProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:inputType="numberSigned"
                android:textSize="16sp" />
        </TableRow>

        <Space android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblNameProductAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblName"
                android:textColor="#FF01A7EB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtNameProductAddProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:inputType="textPersonName"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblCostAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblPrice"
                android:textColor="#FF01A7EB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtCostAddProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:fontFamily="roboto-light"
                android:inputType="number"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dip" >

            <TextView
                android:id="@+id/lblQuantityAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:fontFamily="roboto-light"
                android:text="@string/lblQuantity"
                android:textColor="#FF01A7EB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/txtQuantityAddProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        </TableRow>

        <Space android:layout_height="20dp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnSaveAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/check32px"
                android:fontFamily="roboto-light"
                android:paddingLeft="10dp"
                android:text="@string/btnAccept"
                android:textColor="#91A5AE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCancelAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/cancel32px"
                android:fontFamily="roboto-light"
                android:paddingRight="10dp"
                android:text="@string/btnCancel"
                android:textColor="#91A5AE"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

</ScrollView>
