<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/NameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/lblName" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

    <TextView
        android:id="@+id/FirstLastNameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/lblFirstLastName" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

    <TextView
        android:id="@+id/SecondLastNameClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/lblSecondLastName" 
        android:maxLines="1"
   	    android:ellipsize="end">
    </TextView>

    <ImageView
        android:id="@+id/AccountStateClientListRow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/lblState" 
        android:maxLines="1"
   	    android:ellipsize="end"
   	    android:contentDescription="@string/lblClientState">
    </ImageView>

</LinearLayout>